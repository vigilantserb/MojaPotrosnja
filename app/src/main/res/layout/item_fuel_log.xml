<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/car_data_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/color_dark_grey"
        android:text="Volkswagen Golf 4 Diesel"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fuel_amount_tv"
        android:textColor="@color/color_dark_grey"
        android:text="25 L"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/car_data_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fuel_price_tv"
        android:textColor="@color/color_dark_grey"
        android:text="4000 RSD"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/fuel_amount_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/date_tv"
        android:textColor="@color/color_dark_grey"
        android:text="2020-01-27"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/fuel_price_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>